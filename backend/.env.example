# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth Configuration (REQUIRED)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5173/login

# JWT Secret (REQUIRED - use a secure random string)
JWT_SECRET=your_secure_jwt_secret_key

# Email Configuration (REQUIRED for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# Master User (REQUIRED - admin email)
MASTER_EMAIL=admin@example.com

# Slack Configuration (OPTIONAL - uncomment if using Slack)
# SLACK_BOT_TOKEN=your_slack_bot_token
# SLACK_SIGNING_SECRET=your_slack_signing_secret