{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "types": ["node"],

    // Other Outputs (optimized for memory)
    "sourceMap": false, // disable source maps for production builds to save memory
    "declaration": false, // disable .d.ts files to save memory
    "declarationMap": false,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,

    // ✅ Performance Optimizations
    "skipLibCheck": true, // don't check .d.ts files (huge memory saver)
    "incremental": true, // only rebuild changed files
    "tsBuildInfoFile": "./.tsbuildinfo", // cache build info
    "noEmitOnError": false, // still emit JS even if types fail
    "composite": false, // avoids unnecessary project references
    "isolatedModules": true, // compile each file separately (memory efficient)
    "forceConsistentCasingInFileNames": true

    // Extra Safety
    // ⚠️ "noUncheckedSideEffectImports" is experimental, may cause extra memory usage
    // If you don’t rely on it heavily, consider removing it.
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts"] // ✅ reduce files compiled
}
